<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semester List"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/firstBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-1 Term-1" />

        <Button
            android:id="@+id/secondBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-1 Term-2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/thirdBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-1 Term-3" />

        <Button
            android:id="@+id/fourthBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-2 Term-1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fifthBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-2 Term-2" />

        <Button
            android:id="@+id/sixthBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-2 Term-3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/seventhBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-3 Term-1" />

        <Button
            android:id="@+id/eighthBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-3 Term-2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ninthBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-3 Term-3" />

        <Button
            android:id="@+id/tenthBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-4 Term-1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/eleventhBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-4 Term-2" />

        <Button
            android:id="@+id/twelfthBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level-4 Term-3" />

    </LinearLayout>



</LinearLayout>